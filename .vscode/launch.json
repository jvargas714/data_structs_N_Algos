    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal",
            "env": {
                "PYTHONPATH": "C:\\Users\\Jay.Vargas\\AppData\\Local\\Programs\\Python\\Python36:leetcode:python"
            },
        },

        {
            "name": "LeetTest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp/bin/leetTest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "logging": {
                "programOutput": true,
                "trace": true
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "Tester",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp/bin/tester",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "pyLaunch",
            "type":"python",
            "request": "launch",
            "program": "${workspaceFolder}/python"
        }
    ]
}